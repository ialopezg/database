{
  "compilerOptions": {
    "target": "ESNext",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "strict": true,
    "outDir": "dist",
    "rootDir": "src",
    "declaration": true,
    "sourceMap": true,
    "paths": {
      "@/*": ["./src/*"],
      "@builders/*": ["./src/builders/*"],
      "@drivers/*": ["./src/drivers/*"],
      "@strategies/*": ["./src/strategies/*"],
      "@types/*": ["./src/types/*"]
    }
  },
  "include": ["src"]
}
